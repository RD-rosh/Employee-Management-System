@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Employees";
}

<h1 class="mt-4">Employees</h1>

<div class="d-flex justify-content-between mb-3">
    <div>
        <a asp-action="AddEmployee" class="btn btn-primary">Add New Employee</a>
    </div>
    <div>
        <a asp-action="CalculateWorkingDays" class="btn btn-success">Calculate Working Days</a>
    </div>
</div>


<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Job Position</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.JobPosition</td>
                    <td>
                        <a asp-action="UpdateEmployee" asp-route-id="@employee.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="DeleteEmployee" asp-route-id="@employee.Id" class="btn btn-sm btn-danger" 
   onclick="return confirm('Are you sure you want to delete this employee? This action is permanent.');">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


