@model Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2 class="mt-4">Delete Employee</h2>

<div class="card mb-4">
    <div class="card-body">
        <h3 class="card-title">Are you sure you want to delete this employee?</h3>
        <h4>@Model.Name</h4>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">Job Position</dt>
            <dd class="col-sm-10">@Model.JobPosition</dd>
        </dl>

        <form asp-action="DeleteEmployee" method="post" onsubmit="return confirm('Are you sure you want to delete this employee? This action is permanent.');">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
